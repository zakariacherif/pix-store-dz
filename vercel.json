{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json", // Adjust path to your frontend directory
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist"
}
